<section class="highlight-box show-highlight">
  <p>
    <%= @highlight.text %>
  </p>

  <aside class="view-source">
    <strong><%= link_to @highlight.url, @highlight.url,  target: :_blank %></strong>
  </aside>

  <aside class='view-more'>
      <%= link_to 'View more highlights', @highlight.source %>  from this source.
  </aside>
  
  
  
  <div class="show-highlight-footer">
    <%= link_to 'Edit', edit_highlight_path(@highlight) %> |
    <%= link_to 'Delete', @highlight, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to 'Back', highlights_path %>
  </div>
</section>