<div class="login-container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "center-column-flex"}) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="remember-me">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :id => "login-button" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>
