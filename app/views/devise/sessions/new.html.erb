<div class='flex justify-center items-center'>
  <div class="box login-container p-8">
    <h2 class="text-xl font-bold mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "center-column-flex"}) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", 'aria-required': true, class: 'login-input' %>

      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", 'aria-required': true, class: 'login-input' %>

      <% if devise_mapping.rememberable? %>
        <div class="remember-me flex items-center">
          <%= f.check_box :remember_me, class: 'mr-2' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="m-4">
        <%= f.submit "Log in", :class => "btn-green" %>
      </div>
    <% end %>


    <%= render "devise/shared/links" %>
  </div>
</div>