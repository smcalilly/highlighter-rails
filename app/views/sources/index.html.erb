<p id="notice"><%= notice %></p>

<h1 id="underline">Sources</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.title %></td>
        <td><%= source.location %></td>
        <td><%= link_to 'Show', source %></td>
        <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

