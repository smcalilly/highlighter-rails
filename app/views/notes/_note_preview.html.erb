
  <%= render "shared/content_preview" do %>
    <div class='flex flex-row items-center justify-between'>
      <div class='flex flex-col'>
        <span>
          <%= link_to(note, class: 'text-green-600 font-bold text-lg') do %>
            <% 
              if note.name
                note.name
              else
                truncate(@no_markdown.render(note.body))
              end 
            %>
          <% end %> 
        </span>
        <p class='text-xs text-gray-400'><%= note.updated_at.strftime("%m-%d-%Y") %></p>
      </div>
      
      <ul class='flex flex-row'>
        <%= render note.tags %>
      </ul>
    </div>
    
    <p class='text-sm text-gray-600'><%= truncate(@no_markdown.render(note.body), :length => 120) %></p>
  <% end %>