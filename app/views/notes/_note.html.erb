<div class='flex flex-row justify-center items-center w-2/3'>
  <div class='m-2 bg-white p-4 rounded shadow w-2/3'>
    
    <div class='flex flex-row items-center justify-between'>
      <div class='flex flex-col'>
        <span>
          <%= link_to(note, class: 'text-green-600 font-bold text-lg') do %>
            <%= truncate(@no_markdown.render(note.body)) %>
          <% end %> 
        </span>
        <p class='text-xs text-gray-400'><%= note.updated_at.strftime("%m-%d-%Y") %></p>
      </div>
      
      <div class='flex flex-row'>
        <%= render note.tags %>
      </div>
    </div>
    
    <p class='text-sm text-gray-600'><%= truncate(@no_markdown.render(note.body), :length => 120) %>
    
  </div>
  
</div>