<div class='flex flex-col items-center justify-center w-full'>
  <header class='flex w-1/3 items-center justify-between m-4'>
    <h1 class='text-2xl'>Notes</h1>
    <%= link_to 'New Note', new_note_path %>
  </header>
  
    <% @notes.each do |note| %>
      <div class='flex flex-row justify-center items-center w-2/3'>
        <%= render 'notes/note_preview', :note => note %>
      </div>
    <% end %>
</div>